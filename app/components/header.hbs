<header>
  <nav class="navbar navbar-light">
    <img src="holly.png" alt="Holly Leafs" class="holly-leaf">
    <div class="navbar-brand mb-0 h1 container">
      
      <h1>12 Days of Christmas
        {{if this.isAlcoholic 'Cocktails' 'Mocktails'}}
        </h1>
        <div class="form-check form-switch">
          <label class="form-check-label" for="typeOfCocktail">Show {{this.typeOfCocktail}}</label>
          <input
            class="form-check-input"
            type="checkbox"
            id="typeOfCocktail"
            unchecked
            {{ on 'change' this.handleChange}}>
        </div>
    </div>
  </nav>
  <CocktailsList @isAlcoholic={{this.isAlcoholic}} />
</header>